<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantInfoActivity"
    android:background="@drawable/background"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="0dp"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.04000002" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        >

        <Button
            android:id="@+id/btn_home"
            style="@style/button_home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/subject"
            style="@style/subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:text="@string/info_text_subject"

            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_call"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:onClick="onClickCall"
        android:text="@string/info_btn_call"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintVertical_bias="0.9" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_info"
        android:orientation="vertical"
        android:paddingTop="10dp"

        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/map">

        <TextView
            android:id="@+id/res_name"
            style="@style/setText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="사업장명"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res_address"
            style="@style/setText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="주소1" />

        <TextView
            android:id="@+id/res_call"
            style="@style/setText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/res_gubun"
            style="@style/setText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:paddingTop="16dp"

            android:text="업종"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/res_gubun_detail"
            style="@style/setText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="업종상세" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>