<resources>
    <!--    2) 출처 https://stackoverflow.com/questions/32727527/theme-appcompat-light-noactionbar-fullscreen-not-working-with-android-4-4 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    2) 출처 https://stackoverflow.com/questions/32727527/theme-appcompat-light-noactionbar-fullscreen-not-working-with-android-4-4 -->
        <item name="android:windowFullscreen">true</item>
        <!--    2) 출처 https://stackoverflow.com/questions/32727527/theme-appcompat-light-noactionbar-fullscreen-not-working-with-android-4-4 -->
        <item name="android:windowContentOverlay">@null</item>

        <!--    1) 직접 코딩-->
        <item name="colorPrimary">#b1b1b1</item>
        <item name="colorPrimaryDark">#DFEFF0</item>
        <item name="colorAccent">#AD235E</item>

    </style>

    <!--    1) 직접 코딩-->
    <style name="button">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#7D9C9F</item>
        <item name="android:textSize">20sp</item>

        <item name="android:background">#fff</item>
    </style>

    <!--    1) 직접 코딩-->
    <style name="button_home">
        <item name="android:text">@string/btn_home</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#7D9C9F</item>
        <item name="android:background">#FFFFFF</item>

        <item name="android:onClick">onClickHome</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    1) 직접 코딩-->
    <style name="subject">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">25sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#7D9C9F</item>
    </style>

    <!--    1) 직접 코딩-->
    <style name="setText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--    1) 직접 코딩-->
    <style name="ListText">
        <item name="android:gravity">center</item>
    </style>

    <!--    1) 직접 코딩-->
    <style name="MainText">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>