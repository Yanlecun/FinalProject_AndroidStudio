<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b1b1b1</item>
        <item name="colorPrimaryDark">#DFEFF0</item>
        <item name="colorAccent">#AD235E</item>

    </style>


    <style name="button">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#7D9C9F</item>
        <item name="android:textSize">20sp</item>

        <item name="android:background">#fff</item>
    </style>

    <style name="button_home">
        <item name="android:text">@string/btn_home</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#7D9C9F</item>
        <item name="android:background">#FFFFFF</item>

        <item name="android:onClick">onClickHome</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="subject">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">25sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#7D9C9F</item>
    </style>

    <style name="setText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ListText">
        <item name="android:gravity">center</item>
    </style>
</resources>